{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ballot</h1>

    <table>
        <tbody>
            <tr>
                <th>Language</th>
                <td>{{ ballot.language }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ ballot.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ballot.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ ballot.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ballot_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ballot_edit', { 'id': ballot.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
