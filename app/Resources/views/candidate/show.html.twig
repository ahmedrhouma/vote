{% extends 'base.html.twig' %}

{% block body %}
    <h1>Candidate</h1>

    <table>
        <tbody>
            <tr>
                <th>Language</th>
                <td>{{ candidate.language }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ candidate.type }}</td>
            </tr>
            <tr>
                <th>Liste</th>
                <td>{{ candidate.liste }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ candidate.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('candidate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('candidate_edit', { 'id': candidate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
